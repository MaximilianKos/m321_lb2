<%- include('../partials/header', { title: 'Admin - Produkte' }) %>

<h1>Admin – Produktverwaltung</h1>

<p><a href="/admin/products/new">Neues Produkt anlegen</a></p>

<% if (!products || products.length === 0) { %>
    <p>Keine Produkte vorhanden.</p>
<% } else { %>
    <table>
        <thead>
        <tr>
            <th>Name</th>
            <th>Preis</th>
            <th>Bestand</th>
            <th>Aktionen</th>
        </tr>
        </thead>
        <tbody>
        <% products.forEach(function (p) { %>
            <tr>
                <td><%= p.name %></td>
                <td><%= p.price %> CHF</td>
                <td><%= p.stock %></td>
                <td>
                    <a href="/admin/products/<%= p.id %>/edit">Bearbeiten</a>
                    <form action="/products/<%= p.id %>/delete" method="post" style="display:inline;" onsubmit="return confirm('Wirklich löschen?');">
                        <button type="submit">Löschen</button>
                    </form>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>
<% } %>

<%- include('../partials/footer') %>